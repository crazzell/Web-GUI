<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
  <appender name="console" class="org.apache.log4j.ConsoleAppender"> 
    <param name="Target" value="System.out"/> 
    <layout class="org.apache.log4j.PatternLayout"> 
      <param name="ConversionPattern" value="%d %-5p %c{1} - %m%n"/> 
    </layout> 
  </appender> 

  <appender name="util" class="org.apache.log4j.FileAppender">
	<param name="File" value="/var/log/tomcat/ROOT.log" />
	<param name="Append" value="true" />
	<layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d %-5p (%t) [%c] - %m%n"/>
	</layout>           
  </appender>

  <logger name="noModule">
  	<level value="fatal"/> 
  </logger>

  <logger name="freemarker">
  	<level value="info"/> 
  </logger>

  <logger name="com.opensymphony">
  	<level value="info"/> 
  </logger>

  <logger name="com.opensymphony.xwork2.ognl">
  	<level value="error"/> 
  </logger>

  <logger name="org.apache.struts2">
  	<level value="warn"/> 
  </logger>

  <logger name="org.apache.struts2.components">
  	<level value="warn"/> 
  </logger>

  <logger name="org.apache.struts2.dispatcher">
  	<level value="warn"/> 
  </logger>

  <logger name="org.apache.struts2.convention">
  	<level value="warn"/> 
  </logger>

  <logger name="org.springframework">
  	<level value="warn"/> 
  </logger>

  <logger name="org.communitysqueeze.web">
  	<level value="debug"/> 
  </logger>

  <logger name="org.communitysqueeze.util">
  	<level value="debug"/> 
  </logger>

  <root> 
    <priority value="debug" /> 
    <!-- appender-ref ref="console" / -->
    <appender-ref ref="util" /> 
  </root>
  
</log4j:configuration>